<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows" xmlns:mapsControl="clr-namespace:MapsControl"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit">
    <Style TargetType="mapsControl:MapsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="mapsControl:MapsControl">
                    <Canvas x:Name="PART_Canvas" CacheMode="BitmapCache"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>